/* pages/user/setUserInfo/setUserInfo.wxss */

.wx_wrap {
    min-height: 375px;
}

.account_section {
    background-color: #fff;
    position: relative;
    margin: -1px 0 15px;
    overflow: hidden;
}

.account_title {
    font-size: 14px;
    font-weight: 400;
    margin: 0 10px;
    padding: 12px 0;
    position: relative;
}

.account_card {
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.account_card_profile {
    width: 80px;
    height: 80px;
}

.account_card image {
    width: 100%;
    height: 80px;
    border-radius: 40px;
}

.account_card_profile image {
    display: block;
    width: 100%;
    border-radius: 100%;
}

.fromClas {
    padding: 0 50px;
}

.account_manage {
    position: relative;
}

.item {
    height: 50rpx;
    justify-content: center;
    text-align: center;
}

.item input {
    border-bottom: 1px solid #999;
    color: #999;
    height: 100rpx;
    margin: 0 auto;
    text-align: center;
}

.setButton {
    margin-top: 100rpx;
}

.setButton button {
    background-color: #edaa2a;
    color: #fff;
    width: 80%;
}