/* pages/user/user.wxss */

.wx_wrap {
    min-height: 375px;
}

.account_section {
    background-color: #fff;
    position: relative;
    margin: -1px 0 15px;
    overflow: hidden;
}

.account_title {
    font-size: 14px;
    font-weight: 400;
    margin: 0 10px;
    padding: 12px 0;
    position: relative;
}

.vipTime{
    border: 1px solid #eee;
    width: 150rpx;
    height: 80rpx;
    padding:20rpx;
    position: fixed;
    right: 0;
    top: 150rpx;
    font-size: 30rpx;
    color: #333;
}

.vipTime .vipTime-content{
    word-break:break-all;
    text-align: center;
    font-size:25rpx;
}
.vipTime .vipTime-title{
    word-break:break-all;
    flex: 1;
    text-align: center;
    color: #EDAA26;
}

.account_card {
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.account_card_profile {
    width: 80px;
    height: 80px;
}

.account_card image {
    width: 100%;
    height: 80px;
    border-radius: 40px;
}

.account_card_profile image {
    display: block;
    width: 100%;
    border-radius: 100%;
}

image {
    border: 0 none;
    vertical-align: top;
}

.account_card_info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    overflow: hidden;
    justify-content: center;
    text-align: center;
}

.account_card_name {
    font-size: 45rpx;
    font-weight: 550;
    color: #333;
}

blockquote, body, button, dd, dl, dt, fieldset, form, h1, h2, h3, h4, h5, h6, hr,
input, legend, li, ol, p, pre, td, textarea, th, ul {
    margin: 0;
    padding: 0;
    vertical-align: baseline;
}

.account_card_name_text {
    -webkit-box-flex: 0;
    -webkit-flex-grow: 0;
    flex-grow: 0;
    -webkit-flex-shrink: 1;
    flex-shrink: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.account_card_email, .account_card_phone {
    margin-top: 3px;
    color: #999;
}

.account_card_email image {
    height: 30rpx;
    width: 30rpx;
    vertical-align: middle;
}

.account_manage {
    position: relative;
}

ul, li {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

ol, ul {
    list-style: none;
}

ul, li {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.account_manage .item view {
    width: 100%;
    position: relative;
    height: 40px;
    line-height: 40px;
    margin-left: 10px;
    padding-right: 40px;
    font-size: 30rpx;
    color: #999;
}

.J_ping .go {
    height: 30rpx;
    width: 30rpx;
    float: right;
    margin: auto;
    position: absolute;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    margin-right: 70px;
}

.item image {
    width: 12pt;
    height: 12pt;
    line-height: 44px;
    vertical-align: middle;
}

.Jump {
    justify-content: center;
    text-align: center;
}

.Jump .J_ping image {
    height: 30rpx;
    width: 30rpx;
}
.serviceButton{
    position:relative;
    display: lin;
    color: #999;
    background-color:#fff;
    text-align:left;
}
