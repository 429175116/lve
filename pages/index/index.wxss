    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}

.seckill-floor .title-wrap {
    height: 34px;
    line-height: 34px;
    vertical-align: middle;
}
#seckill_title{
    margin-top: 20rpx; 
}
.title-wrap {
    height: 50px;
    line-height: 50px;
    overflow: hidden;
    background-color: #fff;
}

.seckill-left-link {
    display: inline-block;
    float: left;
    width: 60%;
}

.seckill-tit-txt {
    margin: 0.125rem 0.375rem 0;
    display: inline-block;
    vertical-align: middle;
    font-size: 1rem;
    color: #333;
    font-weight: 700;
}

.seckill-more-link {
    width: 32%;
    display: inline-block;
    color: #999;
    font-size: 30rpx;
    text-align: right;
    position: relative;
    padding-right: 22px;
}

.seckill-more-icon {
    display: inline-block;
    width: 11px;
    height: 11px;
    background-size: cover;
    position: absolute;
    right: 8px;
    top: 11px;
}

.Authorization {
    width: 150rpx;
    height: 80rpx;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 111;
}

.Authorization button {
    width: 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    right: 10rpx;
    top: 300rpx;
    font-size: 20rpx;
    color: #eee;
    background-color: #333;
}

.live{
    padding-bottom: 20rpx; 
    background-color: #fff;
}

.articleContent{
    background-color: #eee;
}

.articleLists{
    width: 700rpx;
    height: auto;
    font-size: 30rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.articleLists image{
    margin-top: 20rpx;
    width: 500rpx;
    height: 300rpx;
    border-radius: 0rpx;
}

.articleLists .articleTitle{
    width: 100%;
    height: auto;
}
.articleLists .articleInfo{
    width: 100%;
    height: 100%;
    color: #686868;
}