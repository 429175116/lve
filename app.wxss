/**app.wxss**/

.page {
    margin-bottom: 120rpx;
}

.swiper {
    width: 100%;
    height: 400rpx;
    border-radius: 10rpx;
}

.swiper image {
    width: 100%;
    height: 100%;
}

#slider+view {
    margin-top: -1.8125rem;
}

#slider+view {
    position: relative;
    z-index: 10;
    margin-top: -.9375rem;
    border-radius: 0.625rem 0.625rem 0 0;
    overflow: hidden;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.title {
    height: 110rpx;
    line-height: 150rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #333;
    background: #fff;
    border-top: 1rpx solid #e2e2e2;
}

.title image {
    width: 50rpx;
    height: 40rpx;
    margin: 50rpx 0 0 20rpx;
    position: absolute;
    left: 0;
}

.footer {
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    background: #fff;
    border-top: 1rpx solid #e2e2e2;
}

.footer .ft_item {
    width: 25%;
    height: 100%;
    text-align: center;
    float: left;
}

/* .footer .on {
    color: #74c26c;
} */

.footer .ft_item image {
    height: 45rpx;
    width: 45rpx;
    margin: 0 auto;
    display: block;
    margin-top: 10rpx;
}

.footer  .ft_item text {
    text-align: center;
    font-size: 26rpx;
    display: block;
    margin: 0 auto;
    margin-top: 10rpx;
    color: #333;
}

.titleLeft {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 40rpx;
    font-size: 40rpx;
    font-weight: 550;
    color: #333;
}

.articleList {
    width: 100%;
    height: 200rpx;
    border-bottom: 1px solid #ddd;
    overflow-y: hidden;
}

.articleList .articleListCla {
    /* margin: 10px 10px; */
    width: 100%;
    height: 200rpx;
}

.articleList .articleListCla view {
    height: 200rpx;
    line-height: 200rpx;
    display: inline-block;
    float: left;
    font-weight: 500;
}

.articleList .number {
    /* border: 1px solid #333; */
    width: 15%;
    word-wrap: break-word;
    text-align: center;
    line-height: 200rpx;
    color: #edaa2a;
    -webkit-tap-highlight-color:rgba(255, 255, 255, 1);
    font-size: 35rpx;
    /* z-index: 888 */
}

.articleList .description {
    width: 50%;
    word-wrap: break-word;
    color: #999;
    font-size: 35rpx;
}

.articleList .img {
    width: 35%;
    line-height: 200rpx;
}

.articleList .img image {
    height: 200rpx;
    line-height: 200rpx;
    width: 100%;
}


.noData {
    height: 110rpx;
    line-height: 150rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #777;
    background: #fff;
    display: none;
}
.show{
    display: block;
}
